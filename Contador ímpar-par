 //Função FOR sendo utilizada para verificar o intervalo de números pares até 100
            int formula, contador, numero;

            Console.WriteLine();
            Console.WriteLine("Para saber os números pares no intervalo de 0 até 100");
            for (contador = 0; contador <= 100; contador += 2) 
            {
                Console.WriteLine("O intervalo contém: " + contador);
            }

            //Função sendo utilizada para verificar os número ímpares
            Console.WriteLine();
            Console.WriteLine("Para saber os número pares no intervalo de 1 até 100");
            for (contador = 1; contador <= 100; contador += 2) 
            {
                Console.WriteLine("Intervalo contém: " + contador);
            }

            Console.ReadLine();
